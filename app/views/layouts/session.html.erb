<!DOCTYPE html>
<html>
  <head>
    <title>UserIO</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'public', media: 'all' %>
    <%= javascript_pack_tag 'public' %>
  </head>

  <body class="body-session">
    <main class="container">
      <div class="m-auto w-84 md:w-96">
        <%= render "layouts/alert" %>

        <h1 class="title md:hidden mb-6">
          <%= content_for :page_title %>
        </h1>

        <%= yield %>
      </div>
    </main>
  </body>
</html>
